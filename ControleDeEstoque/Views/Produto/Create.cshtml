@model ControleDeEstoque.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar Novo Produto</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nome" for="NomeProduto">Nome Do Produto</label>
        <input asp-for="Nome" type="text" class="form-control" id="NomeProduto">
    </div>

    <div class="form-group">
        <label asp-for="Preco" for="PrecoProduto">Preco Do Produto</label>
        <input asp-for="Preco" type="number" class="form-control" id="PrecoProduto">
    </div>
    <button asp-action="Create" type="submit" class="btn btn-primary">Cadastrar</button>
    @*<input type="submit" value="Create" class="btn btn-primary" />*@
</form>

<div>
    <a asp-action="Index">Voltar Para Listas</a>
</div>
